<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_page_number"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_page_radius_10_fill"
        android:text="1"
        android:fontFamily="@font/pretendard_medium"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_margin_right"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_page_number"
        app:layout_constraintStart_toEndOf="@+id/tv_page_number"
        app:layout_constraintTop_toTopOf="@+id/tv_page_number" />


</androidx.constraintlayout.widget.ConstraintLayout>